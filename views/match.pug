html
	head
		meta(charset="utf-8")
		script(src="https://code.jquery.com/jquery-3.2.1.min.js"
			integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
			crossorigin="anonymous")
		link(href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet")


	body
		style(type='text/css')
			include ../public/headers.css
			//- include ../public/match.css


		div(class='inform')
			div
				h2 Inform
				h4 Get COâ‚‚ figures

		div(class='searchbar')
			form(class='form-group' id='match' method='POST' action='/match')
			input(type="text" style="font-weight: 500;font-family: Nunito; font-size: 15px; color: #000;" id='autocomplete' name="autocomplete" datalist='recipes' placeholder="e.g. Avocado")

		div(class='inspire')
			article(id='match')
				h2 Inspire
				h4 #{recipeMatch[0].ingredients}

		div(class='recipeMatch')
			ul(class='recipeList' style)
				each recipe in recipeMatch
					div.recipe_item
						a(href=recipe.href)
							img(class="recipeImage" src=recipe.thumbnail)
						li #{recipe.title}

	style.
		body
			* {
				margin: 0;
				padding: 0;
			}
			h2 {
				font-weight: 200;
				font-family: Nunito;
				font-size: 45px;
				text-transform: uppercase;
				color: #FFF;
			}
			h4 {
				font-weight: 600;
				font-family: Nunito;
				font-size: 20px;
				color: #FFF;
			/*	or color #000*/
			}
			div.searchbar {
				text-align: left;
				position: relative;
				background-color: #FFF;
			}
			div.searchbar input {
				width: 100%;
				height: 62px;
				padding-left: 3%;
			}

			div.inform {
				text-align: center;
				position: relative;
				margin: 0 auto;
				height: 79px;
				background-color: #FFB3BA;
				shadow: 0 -2, Blur6, spread 2
			}

			div.inspire {
				text-align: center;
				position: relative;
				margin: 0 auto;
				height: 79px;
				background-color: #F797A0;
			}
			div.recipeMatch {
				text-align: center;
				position: relative;
				padding: 3%;
			}
			ul.recipeList {
				position: relative;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			div.recipe_item {
				text-align: center;
				position: relative;
				margin: 0 auto;
				display: block;
				vertical-align: center;
				padding: 1%;
			}
			div.recipe_item li{
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			img.recipeImage {
				border-radius: 47%;
				border: solid 3px #F797A0;
			}
